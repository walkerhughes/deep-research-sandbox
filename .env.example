# ============================================
# Deep Research Agent - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# LLM Providers
# ============================================

# OpenAI API (Required)
# Used by Pydantic AI research agents
OPENAI_API_KEY=sk-...

# Perplexity API (Required)
# Used by Perplexity Sonar MCP for web search
PERPLEXITY_API_KEY=pplx-...

# ============================================
# Database (Supabase)
# ============================================

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (public, safe for frontend)
SUPABASE_ANON_KEY=eyJ...

# Supabase Service Role Key (private, backend only)
# WARNING: Never expose this in frontend code!
SUPABASE_SERVICE_KEY=eyJ...

# ============================================
# Compute Platform (Modal)
# ============================================

# Modal Token ID
MODAL_TOKEN_ID=ak-...

# Modal Token Secret
MODAL_TOKEN_SECRET=as-...

# ============================================
# Observability (LangSmith)
# ============================================

# LangSmith API Key
LANGSMITH_API_KEY=lsv2_...

# LangSmith Project Name
LANGSMITH_PROJECT=deep-research-agent

# Enable LangSmith tracing (set to "true" to enable)
LANGCHAIN_TRACING_V2=true

# ============================================
# Webhooks & Communication
# ============================================

# Secret for validating incoming webhooks
WEBHOOK_SECRET=whsec_...

# Frontend URL for sending research completion notifications
FRONTEND_WEBHOOK_URL=https://your-app.vercel.app/api/webhook

# ============================================
# Development Settings
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API Server Port
API_PORT=8000

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
